<html lang="ja">
    <head>
        <meta charset="UTF-8">
        <title>おみくじ</title>
    </head>
    <body>
        <h1>おみくじ</h1>
        <% if params['act']!=nil %>
           <% fortune = ['大吉','吉','中吉','小吉','末吉','凶'] %>
           <% result = fortune[rand(0..5)] %>
        <% else %>
           <% result = 'ありません' %>
        <% else %>
        <p>おみくじの結果:<%= result %></p>
        <from action="/" method="POST">
            <button type="submit" namae="act" value="draw">おみくじをひく！</button>
        </from>
    </body>
</html>